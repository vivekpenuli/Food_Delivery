<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- recycler_item.xml -->
    <androidx.cardview.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="8dp"
        android:layout_margin="8dp"
        tools:ignore="MissingConstraints">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="@dimen/_62sdp"
                android:layout_height="@dimen/_62sdp"
                android:scaleType="fitXY"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/menu5" />

            <TextView
                android:id="@+id/purchas1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_27sdp"
                android:text="Total Price: "
                android:textSize="@dimen/_13sdp"
                app:layout_constraintBottom_toTopOf="@+id/puchase2"
                app:layout_constraintStart_toEndOf="@+id/imageView6"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/puchase2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quantity: "
                android:textSize="@dimen/_13sdp"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/purchas1"
                app:layout_constraintStart_toStartOf="@+id/purchas1"
                app:layout_constraintTop_toBottomOf="@+id/purchas1" />

            <TextView
                android:id="@+id/ordertotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textSize="@dimen/_13sdp"

                android:layout_marginLeft="@dimen/_3sdp"
                app:layout_constraintBottom_toTopOf="@+id/orderqunatity"
                app:layout_constraintStart_toEndOf="@+id/purchas1"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/orderqunatity"
                android:layout_width="wrap_content"
                android:layout_marginLeft="@dimen/_3sdp"
                android:textSize="@dimen/_13sdp"

                android:layout_height="wrap_content"
                android:text="TextView"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/ordertotal"
                app:layout_constraintStart_toEndOf="@+id/purchas1"
                app:layout_constraintTop_toBottomOf="@+id/ordertotal" />

            <androidx.cardview.widget.CardView
                android:id="@+id/orderstatus"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginRight="@dimen/_20sdp"
                app:cardBackgroundColor="@color/md_theme_dark_onPrimaryContainer"
                app:cardCornerRadius="@dimen/_8sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>